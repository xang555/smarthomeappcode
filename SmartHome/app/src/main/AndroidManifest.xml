            android:name=".banner"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controlroom" >
        </activity>
        <activity
            android:name=".smarthome_control"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".useraccess" >
        </activity>
        <activity android:name=".bedcontroller" />
        <activity android:name=".toiletcontroller" >
        </activity>
        <activity android:name=".waycontroller" >
        </activity>
        <activity android:name=".login_controller" />
        <activity android:name=".aboutapp" >
        </activity>
    </application>

</manifest>
